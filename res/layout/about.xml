<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">

	<ImageView android:id="@+id/AboutIcon"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerHorizontal="true" />

	<ScrollView android:id="@+id/AboutScrollView1"
		android:layout_width="wrap_content" android:layout_below="@+id/AboutIcon"
		android:layout_height="200px">

		<TextView android:text="@+id/AboutTextView1" android:id="@+id/AboutTextView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

	</ScrollView>

	<Button android:id="@+id/AboutCloseButton" android:layout_below="@id/AboutScrollView1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerHorizontal="true" android:text="Close" />

</RelativeLayout>
